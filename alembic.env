{
   "platforms": ["darwin", "linux", "windows"],
   "environment":
   {
      "ALEMBIC_ROOT": {"strict": True, "common": "@path/@tool/@version/@platform"},
      "PATH": "${ALEMBIC_ROOT}/bin"
   },
   "optional":
   {
      "python":
      {
         "PYTHONPATH": "${ALEMBIC_ROOT}/lib/python/${PYTHON_VERSION}"
      },
      "arnold":
      {
         "ARNOLD_PROCEDURAL_PATH": "${ALEMBIC_ROOT}/arnold/${ARNOLD_VERSION}"
      },
      "maya":
      {
         "MAYA_SCRIPT_PATH": "${ALEMBIC_ROOT}/maya/scripts",
         "PYTHONPATH": "${ALEMBIC_ROOT}/maya/python",
         "MAYA_PLUG_IN_PATH": "${ALEMBIC_ROOT}/maya/plug-ins/${MAYA_VERSION}"
      },
      ("maya", "arnold"):
      {
         "MTOA_EXTENSIONS_PATH": "${ALEMBIC_ROOT}/maya/plug-ins/${MAYA_VERSION}/mtoa-${MTOA_VERSION}"
      },
      ("maya", "houdini"):
      {
         "HOUDINI_OTLSCAN_PATH": "${ALEMBIC_ROOT}/houdini/otls/${HOUDINI_MAJOR_RELEASE}.${HOUDINI_MINOR_RELEASE}"
      }
   }
}
